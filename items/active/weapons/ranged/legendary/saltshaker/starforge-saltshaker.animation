            "cycle" : 0.15,
            "mode" : "transition",
            "transition" : "idle2"
          },
          "idle2" : {
            "frames" : 1
          },
          "transitionToIdle1" : {
            "frames" : 1,
            "cycle" : 0.15,
            "mode" : "transition",
            "transition" : "idle1"
          },
          "charge" : {
            "frames" : 4,
            "cycle" : 0.25,
            "mode" : "loop"
          }
        }
      }
    },

    "parts" : {
      "gun" : {
        "properties" : {
          "centered" : true,
          "offset" : [0.75, 0.125], // x offset is set dynamically
          "transformationGroups" : ["weapon"]
        },
        "partStates" : {
          "gun" : {
            "idle1" : {
              "properties" : {
                "image" : "<partImage>:ready1"
              }
            },
			      "transitionToIdle2" : {
              "properties" : {
                "image" : "<partImage>:cycle1.<frame>"
              }
            },
			      "idle2" : {
              "properties" : {
                "image" : "<partImage>:ready2"
              }
            },
			      "transitionToIdle1" : {
              "properties" : {
                "image" : "<partImage>:cycle2.<frame>"
              }
            },
			      "charge" : {
              "properties" : {
                "image" : "<partImage>:ready1"
              }
            }
          }
        }
      },
      "charge" : {
        "properties" : {
          "zLevel" : 1,
          "centered" : true,
          "offset" : [1.0625, 0.3125],
          "fullbright" : true,
          "transformationGroups" : ["weapon"]
        },

        "partStates" : {
          "firing" : {
            "charge" : {
              "properties" : {
                "image" : "<partImage>:charge.<frame>"
              }
            },
            "charged" : {
              "properties" : {
                "image" : "<partImage>:charged.<frame>"
              }
            }
          }
        }
      },
      "muzzleFlash" : {
        "properties" : {
          "zLevel" : -1,
          "centered" : true,
          "offset" : [0.5, -0.125],
          "fullbright" : true,
          "transformationGroups" : ["muzzle"]
