  },

  "lights" : {
    "muzzleFlash" : {
      "active" : false,
      "position" : [0, 0],
      "color" : [90, 90, 0]
    }
  },

  "sounds" : {
    "fire" : [ "/sfx/gun/shotgun2.ogg" ],
    "chargeFire" : [ "/sfx/gun/omnicannon_shot2.ogg" ],
	  "unholsterTwirl" : [ "/sfx/interface/item_equip.ogg" ]
  }
